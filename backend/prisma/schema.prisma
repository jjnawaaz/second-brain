generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_DB")
}


enum Link {
  DOCUMENT
  TWEET
  YOUTUBE
  LINKEDIN
}

model User {
  id Int @id @default (autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  email String @unique
  password String 
  sharableLink String?
  contents Content[]
}

model Content {
  id Int @id @default (autoincrement())
  type Link
  title String
  link String 
  description String 
  tags String[] 
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
